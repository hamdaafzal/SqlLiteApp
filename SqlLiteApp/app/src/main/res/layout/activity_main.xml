<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <EditText
            android:id="@+id/ImageNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorMaroon"
            android:textColorHint="@color/colorMaroon"
            android:hint="Enter Image Name Here " />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:id="@+id/image"
        android:layout_below="@id/ImageNameET"
        android:src="@drawable/boat"
        android:scaleType="centerCrop"
        android:onClick="choosrImage"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Image"
        android:id="@+id/SaveBtn"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:background="@color/colorPink"
        android:layout_below="@id/image"
        android:onClick="storeImage"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Show Activity"
        android:id="@+id/ShowActivity"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLightPink"
        android:layout_below="@id/SaveBtn"/>








</RelativeLayout>