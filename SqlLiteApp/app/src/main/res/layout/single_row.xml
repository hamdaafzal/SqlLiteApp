<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Details"
        android:background="@color/colorLightPink"
        android:textColor="@color/colorMaroon"
        android:paddingLeft="10dp"
        android:textSize="25dp"
        android:id="@+id/sr_ImageDetailTV"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/sr_ImageDetailTV"
        android:id="@+id/sr_ImageIV"
        android:src="@drawable/boat"/>





</RelativeLayout>